<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rlopenxr.hellovr"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto">

    <!-- Minimum API level for Quest support -->
    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="34" />

    <!-- Required VR features for Quest -->
    <uses-feature android:name="android.hardware.vr.headtracking" android:required="true" />
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />

    <!-- Internet permission for potential future features -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="rlOpenXR Hello VR"
        android:icon="@mipmap/ic_launcher"
        android:hasCode="false"
        android:allowBackup="true"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        <!-- Main VR Activity -->
        <activity
            android:name="android.app.NativeActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask">

            <!-- Main launcher intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

                <!-- Required for Quest VR apps -->
                <category android:name="com.oculus.intent.category.VR" />
            </intent-filter>

            <!-- Native library name -->
            <meta-data android:name="android.app.lib_name" android:value="hello_vr" />
        </activity>

        <!-- Quest device support -->
        <meta-data android:name="com.oculus.supportedDevices" android:value="quest|quest2|quest3|quest3s" />

        <!-- Declare VR mode usage -->
        <meta-data android:name="com.oculus.vr.focusaware" android:value="true" />
    </application>
</manifest>
